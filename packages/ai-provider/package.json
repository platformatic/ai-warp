{
  "name": "@platformatic/ai-provider",
  "type": "module",
  "version": "0.6.0-dev.1",
  "description": "The Platformatic AI provider interface",
  "license": "Apache-2.0",

  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],

  "scripts": {
    "test": "node --test --experimental-strip-types test/*.test.ts",
    "test:coverage": "c8 -c test/config/c8-local.json node --test --env-file=test/config/env --no-warnings test/**.test.ts",
    "lint": "eslint src test",
    "lint:fix": "eslint src test --fix",
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist;",
    "check": "pnpm clean && pnpm lint && pnpm typecheck && pnpm test && pnpm build"
  },
  "author": "Platformatic Inc. <oss@platformatic.dev> (https://platformatic.dev)",
  "dependencies": {
    "@fastify/deepmerge": "^3.1.0",
    "@fastify/error": "^4.2.0",
    "fast-json-stringify": "^6.0.1",
    "iovalkey": "^0.3.3",
    "openai": "^5.7.0",
    "undici": "^7.10.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.9",
    "c8": "^10.1.3",
    "cleaner-spec-reporter": "^0.5.0",
    "eslint": "^9.21.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "neostandard": "^0.12.1",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=22.16.0"
  }
}
